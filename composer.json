{
  "name": "factuapi/factuapi-php-sdk",
  "description": "An SDK to easily work with the Factuapi API",
  "keywords": [
    "factuapi",
    "verifactu",
    "facturae",
    "api"
  ],
  "homepage": "https://github.com/factuapi/factuapi-php-sdk",
  "license": "MIT",
  "authors": [
    {
      "name": "David Torras",
      "email": "support@creagia.com",
      "homepage": "https://factuapi.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "saloonphp/pagination-plugin": "^2.2",
    "saloonphp/saloon": "^3.14"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.89",
    "pestphp/pest": "^2.35|^3.8.2",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Factuapi\\PhpSdk\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Factuapi\\PhpSdk\\Tests\\": "tests"
    }
  },
  "scripts": {
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes --config=.php_cs.php",
    "test": "vendor/bin/pest -p",
    "analyse": "vendor/bin/phpstan analyse",
    "baseline": "vendor/bin/phpstan analyse --generate-baseline"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "composer/package-versions-deprecated": true,
      "pestphp/pest-plugin": true
    }
  }
}
